@model MVC_CRUD.Context.PersonalDetail

@{
    ViewBag.Title = "Employee";
}

<style>
    .error{
        color:red;
    }
</style>

@using (Html.BeginForm("AddEmployee", "EmpDetail", FormMethod.Post))
 {
     <div class="container">
         <div class="form-group">
             @Html.HiddenFor(e=>e.EmployeeId)
             <label>Employee No.</label>
             @Html.ValidationMessageFor(e => e.EmployeeNo, "", new { @class = "error" })
             @Html.TextBoxFor(e => e.EmployeeNo, new { @class = "form-control" })
         </div>

         <div class="form-group">
             <label>First Name</label>
             @Html.ValidationMessageFor(e => e.FirstName, "", new { @class = "error" })
             @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control" })
         </div>

         <div class="form-group">
             <label>Last Name</label>
             @Html.ValidationMessageFor(e => e.LastName, "", new { @class = "error" })
             @Html.TextBoxFor(e => e.LastName, new { @class = "form-control" })
         </div>

         <div class="form-group">
             <label>Age</label>
             @Html.ValidationMessageFor(e => e.Age, "", new { @class = "error" })
             @Html.TextBoxFor(e => e.Age, new { @class = "form-control" })
         </div>
         <br />
         <div class="form-group">
             <label>Gender</label><br>
             @Html.ValidationMessageFor(e => e.Gender, "", new { @class = "error" })
             @Html.TextBoxFor(e => e.Gender, new { @class = "form-control" })
         </div>

         <div class="form-group">
             <label>Gaurdian Name</label><br>
             @Html.ValidationMessageFor(e => e.Father_HusbandName, "", new { @class = "error" })
             @Html.TextBoxFor(e => e.Father_HusbandName, new { @class = "form-control" })
         </div>
         <div class="form-group">
             <label>Maritial Status</label><br>
             @Html.ValidationMessageFor(e => e.MaritialStatus, "", new { @class = "error" })
             @Html.TextBoxFor(e => e.MaritialStatus, new { @class = "form-control" })
         </div>

         <div class="form-group">
             <label>IsActive</label><br>
             @Html.TextBoxFor(e => e.IsActive, new { @class = "form-control" })
         </div>
         <br />
         <div class="form-group">
             <button type="submit" class="btn btn-primary">Submit</button>
             <button type="reset" class="btn btn-danger">Cancel</button>
         </div>


     </div>
 }


